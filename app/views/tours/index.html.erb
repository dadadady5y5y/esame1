<p id="notice"><%= notice %></p>

<h1>Tours</h1>

<table>
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Descrizione</th>
      <th>Descrizione1</th>
      <th>Luogo</th>
      <th>Giorni</th>
      <th>Durata</th>
      <th>Numero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.denominazione %></td>
        <td><%= tour.descrizione %></td>
        <td><%= tour.descrizione1 %></td>
        <td><%= tour.luogo %></td>
        <td><%= tour.giorni %></td>
        <td><%= tour.durata %></td>
        <td><%= tour.numero %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

